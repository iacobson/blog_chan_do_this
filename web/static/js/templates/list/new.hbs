<div class="form-horizontal">
  <div class="form-group">
    <input type="text" class="form-control" placeholder="list name" data-list="new-list-name">
  </div>
  <div class="form-group">
    <div class="btn-group btn-group-justified" role="group">
      <div class="btn-group" role="group">
        <button type="submit" class="btn btn-success btn-xs" data-behaviour="create-list">CREATE</button>
      </div>
      <div class="btn-group" role="group">
        <button type="submit" class="btn btn-danger btn-xs" data-behaviour="cancel-create-list">CANCEL</button>
      </div>
    </div>
  </div>
</div>
