<li class = "list-group-item">
  <button type="button" class="btn btn-warning btn-xs" data-behaviour="edit-todo">
    EDIT
  </button>
  <button type="button" class="btn btn-danger btn-xs" data-behaviour="delete-todo">
    DELETE
  </button>
  <span data-todo="name" data-todo-name="{{name}}" data-todo-complete="{{complete}}">
    {{#unless complete}}
      <b>  {{name}}  </b>
    {{else}}
      <strike>  {{name}}  </strike>
    {{/unless}}
  </span>
  {{#unless complete}}
    <button type="button" class="btn btn-primary btn-xs pull-right" data-behaviour="todo-done">
      DONE
    </button>
  {{else}}
    <button type="button" class="btn btn-info btn-xs pull-right" data-behaviour="todo-done">
      UNDO
    </button>
  {{/unless}}
</li>
