<div class="panel panel-info" data-todos-list-id={{list.id}}>
  <div class="panel-heading clearfix">
    <h2 class="panel-title">
      {{list.name}} - TO DO LIST
      <button data-behaviour="new-todo" type="button" class="btn btn-success btn-sm pull-right">ADD</button>
    </h2>
  </div>
  <div class="panel-body" data-todo="new-todo-container"></div>
  <ul class="list-group" data-todo="todo-index-container">
    {{#each todos}}
      <div data-todo="todo-container" data-todo-id={{id}}>
        {{> todoPartial}}
      </div>
    {{/each}}
  </ul>
</div>
